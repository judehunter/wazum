{
  "compilerOptions": {
    // These both need to be true for Node ESM compatibility.
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // DOM types are needed for WebAssembly even in Node.js, for now (remove
    // this later). https://github.com/microsoft/TypeScript-DOM-lib-generator/issues/826
    "lib": ["es2020", "ESNext", "DOM"],
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "declaration": true,

    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/test/**/*.*"]
}
